    <title>Multiple Choice Exam</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .question {
            margin-bottom: 15px;
        }
        .result {
            margin-top: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h2>Multiple Choice Exam</h2>
    <form id="quizForm">
        <div class="question">
            <p><label for="q1">1. What is the capital of France?</label></p>
            <input type="radio" id="q1a" name="q1" value="A"> <label for="q1a">A) Berlin</label><br>
            <input type="radio" id="q1b" name="q1" value="B"> <label for="q1b">B) Madrid</label><br>
            <input type="radio" id="q1c" name="q1" value="C"> <label for="q1c">C) Paris</label><br>
            <input type="radio" id="q1d" name="q1" value="D"> <label for="q1d">D) Rome</label><br>
        </div>
        
        <div class="question">
            <p><label for="q2">2. What is 2 + 2?</label></p>
            <input type="radio" id="q2a" name="q2" value="A"> <label for="q2a">A) 3</label><br>
            <input type="radio" id="q2b" name="q2" value="B"> <label for="q2b">B) 4</label><br>
            <input type="radio" id="q2c" name="q2" value="C"> <label for="q2c">C) 5</label><br>
            <input type="radio" id="q2d" name="q2" value="D"> <label for="q2d">D) 6</label><br>
        </div>
        
        <button type="button" onclick="checkAnswers()">Submit</button>
    </form>
    
    <div class="result" id="result" role="alert"></div>
    
    <script>
        function checkAnswers() {
            let score = 0;
            let totalQuestions = 2;
            
            let answers = {
                q1: "C",
                q2: "B"
            };
            
            let form = document.getElementById("quizForm");
            
            for (let key in answers) {
                let selected = form.querySelector(`input[name="${key}"]:checked`);
                if (selected && selected.value === answers[key]) {
                    score++;
                }
            }
            
            document.getElementById("result").innerText = `You scored ${score} out of ${totalQuestions}`;
        }
    </script>
</body>
